<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controllers.RegisterController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #008080;">
            <children>
                <AnchorPane layoutY="85.0" prefHeight="315.0" prefWidth="600.0" style="-fx-background-color: #E6E6FA;">
                    <children>
                        <TextField fx:id="regNameField" layoutX="39.0" layoutY="55.0" prefHeight="30.0" prefWidth="224.0" promptText="Name">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                        <Button fx:id="regButton" layoutX="414.0" layoutY="255.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="102.0" text="Sign Up">
                            <font>
                                <Font name="Berlin Sans FB" size="18.0" />
                            </font>
                        </Button>
                  <TextField fx:id="regSurnameField" layoutX="353.0" layoutY="55.0" prefHeight="30.0" prefWidth="224.0" promptText="Surname">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <PasswordField fx:id="regPassField" layoutX="353.0" layoutY="118.0" prefHeight="30.0" prefWidth="224.0" promptText="Password">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </PasswordField>
                  <TextField fx:id="regLoginField" layoutX="39.0" layoutY="118.0" prefHeight="30.0" prefWidth="224.0" promptText="Login">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="Sign" layoutX="190.0" layoutY="213.0" prefHeight="30.0" prefWidth="224.0" promptText="Sign">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <RadioButton fx:id="gender1" layoutX="190.0" layoutY="174.0" mnemonicParsing="false" selected="true" text="Male">
                     <toggleGroup>
                        <ToggleGroup fx:id="gender" />
                     </toggleGroup></RadioButton>
                  <RadioButton fx:id="gender2" layoutX="353.0" layoutY="174.0" mnemonicParsing="false" text="Female" toggleGroup="$gender" />
                    </children>
                </AnchorPane>
                <Label layoutX="190.0" layoutY="14.0" prefHeight="65.0" prefWidth="224.0" text="Welcome!" textFill="#46193d">
                    <font>
                        <Font name="Berlin Sans FB Bold" size="48.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</GridPane>
